<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<data>
		<!-- Template email - avancement échelon -->
		<record id="template_avancement_echelon_id" model="mail.template">
			<field name="name">PSI Template email - Notification avancement échelon</field>
			<field name="model_id" ref="hr_contract_psi.model_hr_contract" />
			<field name="email_from">${object.create_uid.email}</field>
			<field name="subject">Avancement échelon</field>
			<field name="email_to">${object.employee_id.work_email}</field>

			<field name="body_html"><![CDATA[
		<div>
		    <p>
		      	Bonjour ${object.employee_id.name},
		     	Votre échelon est changer au ${object.psi_echelon}.                  
			</p>
			<h5> Email - Notification avancement échelon</h5>
		                 
		</div>   ]]>
			</field>
		</record>
		
