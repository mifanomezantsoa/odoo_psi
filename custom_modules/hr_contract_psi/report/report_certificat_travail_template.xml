<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="report_certificat_travail">
	    <t t-call="report.html_container">
            <t t-call="report.external_layout">
                <div class="page">
                	<style>
			        .cadre1 {
							font-size: x-large;
							border:1px solid black;
							padding: 1% 1% 1% 1%;
							width: 250px;
							text-align:center;
					}
					.cadre2 {
							font-size: small;
							border:1px solid black;
							padding: 1% 1% 1% 1%;
							width: 400px;
							text-align:left;
					}
					.periode {
					         text-align:center;
					         font-size: xx-small;
					}
					td,th {padding-top:1%;padding-bottom:1%;padding-right:1%;padding-left:1%;border:1px solid;}
					table {margin-left:1%;margin-right:1%;border:1px solid;align:center;font-family: Arial, "Arial Black",Arial, Verdana, sans-serif;}
					th {text-align:center;font-weight:bold;}
			    	.tableau{width: 98%;}
			    	</style>
                    
		            <div class="row">
		                <div>
			                <div class="col-xs-6">
							    <h2 class="cadre1">CERTIFICAT DE TRAVAIL <!-- du <span t-esc="get_date_start_filter()"/> au <span t-esc="get_date_end_filter()"/> --> </h2>
						    </div>
						</div>
						
	                    <table width="98%" border="1">
						  <thead>
						    <tr>
						      <th>POSTE</th>
						      <th>DEBUT</th>
						      <th>FIN</th>
						    </tr>
						  </thead>
						  <tbody>
						    <tr align="center" t-foreach="docs.psi_certificat" t-as="line">
						      <td><span t-esc="line.nouveau"/></td>
						      <td><span t-field="line.debut"/></td>
						      <td><span t-field="line.fin"/></td>
						    </tr>
						  </tbody>
						</table>
				    </div>	
                </div>
            </t>
        </t>
	</template>
	
</odoo>
