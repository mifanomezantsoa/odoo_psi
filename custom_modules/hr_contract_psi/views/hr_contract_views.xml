<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="hr_contract_view_form2" model="ir.ui.view">
		<field name="name">hr.contract.form1</field>
		<field name="model">hr.contract</field>
		<field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
		<field name="arch" type="xml">
			<field name="job_id" position="after" >
        		<field name="place_of_work" />
        	</field>
        	<field name="type_id" position="after" >
        		<field name="state_of_work"/>
        	</field>
		</field>
	</record>
	<data noupdate="1">
        <record id="ir_cron_scheduler_send_email_action" model="ir.cron">
            <field name="name">send_email_one_collaborator</field>
            <field name="active" eval="False" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">1</field>
            <field name="doal">1</field>
            <!--<field name="nextcall" >2016-12-31 23:59:59</field>-->
            <field eval="'hr.contract'" name="model" /> 
            <field name="function" eval="'send_email_collaborator'" /> 
            <!--<field name="priority" eval="5" />-->
        </record>
    </data>
</odoo>
