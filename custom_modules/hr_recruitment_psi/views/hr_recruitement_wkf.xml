<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- workflow -->
        <record id="hr_recruitement_wkf" model="workflow">
            <field name="name">Workflow recrutement</field>
            <field name="osv">hr.applicant</field>
            <field name="on_create">True</field>
        </record>
        
        <!-- activity -->
         <record id="activity_applicant_selected" model="workflow.activity">
            <field name="wkf_id" ref="hr_recruitement_wkf"/>
            <field name="name">activity_applicant_selected</field>
            <field name="flow_start">True</field>
			<field name="kind">function</field>
			<field name="action">write({'state':'applicant_selected'})</field>
		</record>
        <record id="activity_convoked_for_test" model="workflow.activity">
		    <field name="wkf_id" ref="hr_recruitement_wkf"/>
            <field name="name">convoked_for_test</field>
            <field name="kind">function</field>
            <field name="action">convoked_for_test()</field>
        </record>
        <record id="activity_interview" model="workflow.activity">
		    <field name="wkf_id" ref="hr_recruitement_wkf"/>
            <field name="name">interview</field>
            <field name="kind">function</field>
            <field name="action">write({'state': 'interview'})</field>
        </record>
        <record id="activity_professional_reference" model="workflow.activity">
		    <field name="wkf_id" ref="hr_recruitement_wkf"/>
            <field name="name">professional_reference</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'professional_reference'})</field>
        </record>
        <record id="activity_refused" model="workflow.activity">
		    <field name="wkf_id" ref="hr_recruitement_wkf"/>
            <field name="name">activity_refused</field>
            <field name="kind">function</field>
            <field name="action">mail_refuse_applicant()</field>
        </record>
        <record id="activity_bridger_insight" model="workflow.activity">
		    <field name="wkf_id" ref="hr_recruitement_wkf"/>
            <field name="name">bridger_insight</field>
            <field name="kind">function</field>
            <field name="action">action_briger_insight()</field>
        </record>
        <record id="activity_psi_wage_proposal" model="workflow.activity">
		    <field name="wkf_id" ref="hr_recruitement_wkf"/>
            <field name="name">psi_wage_proposal</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'psi_wage_proposal'})</field>
        </record>
        <record id="activity_notification_of_employment" model="workflow.activity">
		    <field name="wkf_id" ref="hr_recruitement_wkf"/>
            <field name="name">notification_of_employment</field>
            <field name="kind">function</field>
            <field name="action">action_notification_of_employment()</field>
        </record>
        <record id="activity_contract_established" model="workflow.activity">
		    <field name="wkf_id" ref="hr_recruitement_wkf"/>
            <field name="name">contract_established</field>
            <field name="kind">function</field>
            <field name="action">action_contract_established()</field>
        </record>
		 <record id="activity_honorary_proposal" model="workflow.activity">
		    <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="name">honorary_proposal</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'honorary_proposal'})</field>
        </record>
         <record id="activity_contract_established_consultant" model="workflow.activity">
		    <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="name">contract_established_consultant</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'contract_established_consultant'})</field>
        </record>
        <record id="activity_benefits" model="workflow.activity">
		    <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="name">benefits</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'benefits'})</field>
        </record>
         <record id="activity_internship_contract" model="workflow.activity">
		    <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="name">internship_contract</field>
            <field name="kind">function</field>
            <field name="action">action_internship_contract()</field>
        </record>      
        
		<!-- transition -->
		<record id="activity_applicant_selected_to_activity_convoked_for_test" model="workflow.transition">
            <field name="act_from" ref="activity_applicant_selected"/>
            <field name="act_to" ref="activity_convoked_for_test"/>
            <field name="signal">button_convoked_for_test</field>
        </record>
        <record id="activity_refused_to_activity_applicant_selected" model="workflow.transition">
            <field name="act_from" ref="activity_refused"/>
            <field name="act_to" ref="activity_convoked_for_test"/>
            <field name="signal">button_convoked_for_test</field>
        </record>
        <record id="activity_refused_consultant_consideration_de_dossier_to_activity_interview" model="workflow.transition">
            <field name="act_from" ref="activity_refused"/>
            <field name="act_to" ref="activity_interview"/>
            <field name="signal">button_consultant_consideration_de_dossier</field>
        </record>
        <record id="activity_refused_to_activity_interview" model="workflow.transition">
            <field name="act_from" ref="activity_refused"/>
            <field name="act_to" ref="activity_interview"/>
            <field name="signal">button_interview</field>
        </record>
        <record id="activity_applicant_selected_to_activity_professional_reference" model="workflow.transition">
            <field name="act_from" ref="activity_applicant_selected"/>
            <field name="act_to" ref="activity_professional_reference"/>
            <field name="signal">button_consultant_consideration_de_dossier</field>
        </record>
        <record id="activity_convoked_for_test_to_activity_interview" model="workflow.transition">
            <field name="act_from" ref="activity_convoked_for_test"/>
            <field name="act_to" ref="activity_interview"/>
            <field name="signal">button_interview</field>
        </record>
        <record id="activity_applicant_selected_to_activity_interview" model="workflow.transition">
            <field name="act_from" ref="activity_applicant_selected"/>
            <field name="act_to" ref="activity_interview"/>
            <field name="signal">button_interview</field>
        </record>
        <record id="activity_interview_to_activity_refused" model="workflow.transition">
            <field name="act_from" ref="activity_interview"/>
            <field name="act_to" ref="activity_refused"/>
            <field name="signal">button_refuser</field>
        </record>
        <record id="activity_interview_to_activity_professional_reference" model="workflow.transition">
            <field name="act_from" ref="activity_interview"/>
            <field name="act_to" ref="activity_professional_reference"/>
            <field name="signal">button_professional_reference</field>
        </record>
         <record id="activity_professional_reference_to_activity_refused" model="workflow.transition">
            <field name="act_from" ref="activity_professional_reference"/>
            <field name="act_to" ref="activity_refused"/>
            <field name="signal">button_refuser</field>
        </record>
        <record id="activity_interview_to_activity_bridger_insight" model="workflow.transition">
            <field name="act_from" ref="activity_interview"/>
            <field name="act_to" ref="activity_bridger_insight"/>
            <field name="signal">button_bridger_insight_trainee_interview</field>
        </record>
        <record id="activity_professional_reference_to_activity_bridger_insight" model="workflow.transition">
            <field name="act_from" ref="activity_professional_reference"/>
            <field name="act_to" ref="activity_bridger_insight"/>
            <field name="signal">button_bridger_insight</field>
        </record>
        <record id="activity_bridger_insight_to_activity_refused" model="workflow.transition">
            <field name="act_from" ref="activity_bridger_insight"/>
            <field name="act_to" ref="activity_refused"/>
            <field name="signal">button_refuser</field>
        </record>
        <record id="activity_brigdger_insight_to_activity_psi_wage_proposal" model="workflow.transition">
            <field name="act_from" ref="activity_bridger_insight"/>
            <field name="act_to" ref="activity_psi_wage_proposal"/>
            <field name="signal">button_psi_wage_proposal</field>
        </record>
        <record id="activity_brigdger_insight_to_activity_honorary_proposal" model="workflow.transition">
            <field name="act_from" ref="activity_bridger_insight"/>
            <field name="act_to" ref="activity_honorary_proposal"/>
            <field name="signal">button_psi_honorary_proposal</field>
        </record>
         <record id="activity_brigdger_insight_to_activity_benefits" model="workflow.transition">
            <field name="act_from" ref="activity_bridger_insight"/>
            <field name="act_to" ref="activity_benefits"/>
            <field name="signal">button_benefits</field>
        </record>
        <record id="activity_psi_wage_proposal_to_activity_notification_of_employment" model="workflow.transition">
            <field name="act_from" ref="activity_psi_wage_proposal"/>
            <field name="act_to" ref="activity_notification_of_employment"/>
            <field name="signal">button_notification_of_employment</field>
        </record>
        <record id="activity_notification_of_employment_to_activity_contract_established" model="workflow.transition">
            <field name="act_from" ref="activity_notification_of_employment"/>
            <field name="act_to" ref="activity_contract_established"/>
            <field name="signal">button_contract_established</field>
        </record>
         <record id="activity_benefits_to_activity_internship_contract" model="workflow.transition">
            <field name="act_from" ref="activity_benefits"/>
            <field name="act_to" ref="activity_internship_contract"/>
            <field name="signal">button_internship_contract</field>
        </record>
        <record id="activity_honorary_proposal_to_activity_contract_established" model="workflow.transition">
            <field name="act_from" ref="activity_honorary_proposal"/>
            <field name="act_to" ref="activity_contract_established_consultant"/>
            <field name="signal">button_contract_established_consultant</field>
        </record>
        
    </data>
</odoo>