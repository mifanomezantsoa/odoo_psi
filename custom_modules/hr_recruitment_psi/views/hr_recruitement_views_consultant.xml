<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="crm_case_form_view_job_inherit_consultant" model="ir.ui.view">
			<field name="name">form consultant</field>
			<field name="model">hr.applicant</field>
			<field name="mode">primary</field>
			<field name="inherit_id" ref="crm_case_form_view_job_inherit1" />
			<field name="arch" type="xml">
				<field name="state" position="replace">
					<field name="state" widget="statusbar"
						attrs="{'invisible': [('active', '=', False)]}"
						statusbar_visible="applicant_selected,convoked_for_test,interview,professional_reference,psi_wage_proposal,notification_of_employment,contract_established" />
				</field>
			</field>
		</record>
		
		<record id="kanban_consultant" model="ir.ui.view">
			<field name="name">kanban consultant</field>
			<field name="model">hr.applicant</field>
			<field name="mode">primary</field>
			<field name="inherit_id" ref="hr_recruitment.hr_kanban_view_applicant" />
			<field name="arch" type="xml">
			
				<!-- TODO: ETAPES KANBAN Ã  GERER selon TYPE RECRUTEMENT -->
			
				<kanban position="attributes">
	                <attribute name="edit">false</attribute>
	                <attribute name="quick_create">false</attribute>
	            </kanban>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_consultant">
	        <field name="name">Candidatures des Consultants</field>
	        <field name="res_model">hr.applicant</field>
	        <field name="view_mode">tree,form,kanban,calendar</field>
	        <field name="context">{'search_default_job_id': [active_id], 'default_job_id': active_id}</field>
	    </record>
	    
	    <record model="ir.actions.act_window.view" id="action_tree_consultant">
	        <field name="sequence" eval="2"/>
	        <field name="view_mode">tree</field>
	        <field name="view_id" ref="crm_case_tree_view_job2"/>
	        <field name="act_window_id" ref="action_consultant"/>
	    </record>
	    
	    <record model="ir.actions.act_window.view" id="action_kanban_consultant">
	        <field name="sequence" eval="3"/>
	        <field name="view_mode">kanban</field>
	        <field name="view_id" ref="kanban_consultant"/>
	        <field name="act_window_id" ref="action_consultant"/>
	    </record>
	    
	    <record model="ir.actions.act_window.view" id="action_hr_sec_form_view_act_job3">
	        <field name="sequence" eval="4"/>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="crm_case_form_view_job_inherit_consultant"/>
	        <field name="act_window_id" ref="action_consultant"/>
	    </record>

	</data>
</odoo>
