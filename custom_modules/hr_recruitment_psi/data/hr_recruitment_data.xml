<?xml version="1.0"?>
<odoo>
  <data noupdate="1">
    <!-- Lieu d'embauche -->
 	<record model="hr.recruitment.lieu.embauche" id="lieu_embauche_antananarivo">
  		<field name="name">Antananarivo</field>
  		<field name="embauche_id">1</field>
  	</record>
  	<record model="hr.recruitment.lieu.embauche" id="lieu_embauche_toamasina">
  		<field name="name">Toamasina</field>
  		<field name="embauche_id">2</field>
  	</record>
  	<record model="hr.recruitment.lieu.embauche" id="lieu_embauche_antsiranana">
  		<field name="name">Antsiranana</field>
  		<field name="embauche_id">3</field>
  	</record>
  	 
    <!-- etape candidature -->  
	<record model="hr.recruitment.stage" id="applicant_selected">
        <field name="name">Candidatures sélectionnées</field>
        <field name="sequence">1</field>
		<field name="stage">applicant_selected</field>
    </record>
    <record model="hr.recruitment.stage" id="convoked_for_test">
        <field name="name">1- Convoqués pour les tests</field>
        <field name="sequence">2</field>
		<field name="stage">convoked_for_test</field>
    </record>
    <record model="hr.recruitment.stage" id="interview">
        <field name="name">2- Entretiens</field>
        <field name="sequence">3</field>
		<field name="stage">interview</field>
    </record>
    <record model="hr.recruitment.stage" id="professional_reference">
        <field name="name">3- Références proféssionnelles</field>
        <field name="sequence">4</field>
		<field name="stage">professional_reference</field>
    </record>
    <record model="hr.recruitment.stage" id="bridger_insight">
        <field name="name">4- Bridger Insight</field>
        <field name="sequence">5</field>
		<field name="stage">bridger_insight</field>
    </record>
    <record model="hr.recruitment.stage" id="psi_wage_proposal">
        <field name="name">5- Proposition Salariale</field>
        <field name="sequence">6</field>
		<field name="stage">psi_wage_proposal</field>
    </record>
    <record model="hr.recruitment.stage" id="notification_of_employment">
        <field name="name">6- Notification d'embauche</field>
        <field name="sequence">7</field>
        <field name="stage">notification_of_employment</field>
    </record>
    <record model="hr.recruitment.stage" id="contract_established">
        <field name="name">7- Contrat Etabli</field>
        <field name="sequence">8</field>
        <field name="stage">contract_established</field>
    </record>
    <!-- fin etape candidature -->
    
    <!-- type de recrutement -->
    <record model="hr.recruitment.type" id="type_collaborateur">
        <field name="name">Recrutement d'un collaborateur permanent</field>
        <field name="recrutement_type">collaborateur</field>
    </record>
    <record model="hr.recruitment.type" id="type_consultant">
        <field name="name">Recrutement d'un consultant</field>
        <field name="recrutement_type">consultant</field>
    </record>
    <record model="hr.recruitment.type" id="type_stagiaire">
        <field name="name">Recrutement d'un stagiaire</field>
        <field name="recrutement_type">stagiaire</field>
    </record>
    <record model="hr.recruitment.type" id="type_collaborateur_externe">
        <field name="name">Recrutement avec Cabinet de recrutement</field>
        <field name="recrutement_type">collaborateur_externe</field>
    </record>
    <!-- fin type de recrutement -->
    
  </data>
</odoo>