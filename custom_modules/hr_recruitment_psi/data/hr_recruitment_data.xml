<?xml version="1.0"?>
<odoo>
  <data>
    <!-- etape candidature -->  
	<record model="hr.recruitment.stage" id="draft2">
        <field name="name">Nouveau</field>
        <field name="sequence">1</field>
		<field name="stage">draft2</field>
    </record>  
    <record model="hr.recruitment.stage" id="cv_received">
        <field name="name">CV réceptionné</field>
        <field name="sequence">2</field>
		<field name="stage">cv_received</field>
    </record>
    <record model="hr.recruitment.stage" id="cv_saved">
        <field name="name">CV enregistré</field>
        <field name="sequence">3</field>
		<field name="stage">cv_saved</field>
    </record>
    <record model="hr.recruitment.stage" id="can_do_test">
        <field name="name">Convoqué pour les tests</field>
        <field name="sequence">4</field>
		<field name="stage">can_do_test</field>
    </record>
    <record model="hr.recruitment.stage" id="can_be_interviewed">
        <field name="name">A interviewer</field>
        <field name="sequence">5</field>
		<field name="stage">can_be_interviewed</field>
    </record>
    <record model="hr.recruitment.stage" id="first_interview">
        <field name="name">Premier entretien</field>
        <field name="sequence">6</field>
		<field name="stage">first_interview</field>
    </record>
    <record model="hr.recruitment.stage" id="drh_validation">
        <field name="name">Validation DRH</field>
        <field name="sequence">7</field>
        <field name="stage">drh_validation</field>
    </record>
    <record model="hr.recruitment.stage" id="drh_allocation_stage">
        <field name="name">DRH Allocation de stage</field>
        <field name="sequence">8</field>
        <field name="stage">drh_allocation_stage</field>
    </record>
    <record model="hr.recruitment.stage" id="in_deliberation">
        <field name="name">En attente de délibération</field>
        <field name="sequence">9</field>

        <field name="stage">in_deliberation</field>
    </record>
    <record model="hr.recruitment.stage" id="second_interview">
        <field name="name">Deuxième entretien</field>
        <field name="sequence">10</field>

        <field name="stage">second_interview</field>
    </record>
    <record model="hr.recruitment.stage" id="bi">
        <field name="name">Bridger Insight</field>
        <field name="sequence">11</field>

        <field name="stage">bi</field>
    </record>
    <record model="hr.recruitment.stage" id="verification_ref">
        <field name="name">Vérification des références</field>
        <field name="sequence">12</field>

        <field name="stage">verification_ref</field>
    </record>
    <record model="hr.recruitment.stage" id="wage_proposal">
        <field name="name">Salaire proposé</field>
        <field name="sequence">14</field>

        <field name="stage">wage_proposal</field>
    </record>
    <record model="hr.recruitment.stage" id="salary_validated">
        <field name="name">Salaire validé</field>
        <field name="sequence">15</field>

        <field name="stage">salary_validated</field>
    </record>
    <record model="hr.recruitment.stage" id="candidat_notified">
        <field name="name">Candidat notifié</field>
        <field name="sequence">16</field>
		<field name="stage">candidat_notified</field>
    </record>
    <record model="hr.recruitment.stage" id="final_decision">
        <field name="name">Decision finale</field>
        <field name="sequence">17</field>
		<field name="stage">final_decision</field>
    </record>
    <record model="hr.recruitment.stage" id="contract">
        <field name="name">Contrat établi</field>
        <field name="sequence">18</field>
		<field name="stage">contract</field>
    </record>
    <record model="hr.recruitment.stage" id="contract_signed">
        <field name="name">Contrat signé</field>
        <field name="sequence">19</field>
		<field name="stage">contract_signed</field>
    </record>
    <!-- fin etape candidature -->
    
    <!-- type de recrutement -->
    <record model="hr.recruitment.type" id="type_collaborateur">
        <field name="name">Recrutement d'un collaborateur permanent</field>
        <field name="recrutement_type">collaborateur</field>
    </record>
    <record model="hr.recruitment.type" id="type_consultant">
        <field name="name">Recrutement d'un consultant</field>
        <field name="recrutement_type">consultant</field>
    </record>
    <record model="hr.recruitment.type" id="type_stagiaire">
        <field name="name">Recrutement d'un stagiaire</field>
        <field name="recrutement_type">stagiaire</field>
    </record>
    <record model="hr.recruitment.type" id="type_collaborateur_externe">
        <field name="name">Recrutement d'un collaborateur permanent avec un Cabinet Externe</field>
        <field name="recrutement_type">collaborateur_externe</field>
    </record>
    <!-- fin type de recrutement -->
    
  </data>
</odoo>