<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
	<data>
	
   		<!-- Search Filter in HrHolidays -->
		<record id="hr_holidays_filter_inherit" model="ir.ui.view">
			<field name="name">hr.holidays.filter.inherit</field>
			<field name="model">hr.holidays</field>
			<field name="inherit_id" ref="hr_holidays.view_hr_holidays_filter" />
			<field name="arch" type="xml">
				<xpath expr="filter[@name='approve']" position="before">					
					<filter string="Personnel permanent du mois en cours" 
						domain="['&amp;',('employee_type','=','collaborateur'),('date_from','&lt;=',(datetime.date.today()+relativedelta(day=31)).strftime('%Y-%m-%d')),('date_from','&gt;=',(datetime.date.today()-relativedelta(day=1)).strftime('%Y-%m-%d'))]" 
						help="Liste des absences de tout le personnel permanent pour le mois courant"
						/>				
				</xpath>
			</field>
		</record>

	<record id="edit_holiday_new_psi_inherit" model="ir.ui.view">
		<field name="name">edit.holiday.new.psi.inherit</field>
		<field name="model">hr.holidays</field>
		<field name="inherit_id" ref="hr_holidays.edit_holiday_new" />
		<field name="arch" type="xml">
			<xpath expr="//div[@class='oe_title']">
				<div name="button_box" position="inside">
					<button name="action_get_attachment_tree_view" 
						class="oe_stat_button" 
						icon="fa-book" type="object">
						<field name="attachment_number" widget="statinfo" string="Documents"
							modifiers="{'readonly': true}" />
					</button>
				</div>
			</xpath>
			<field name="category_id" position="replace">
				<!-- <field name="color_name_holiday_status" invisible="1" /> -->
				<field name="category_id" invisible="1" />
				<field name="last_business_day" invisible="1" />
				<field name="employee_type" invisible="1" />
			</field>
			
			<xpath expr="//field[@name='holiday_status_id']" position='after'>
				<!-- <field name="holiday_type_permission" attrs="{'invisible':[('id_psi_holidays_status','!=',1)]}" /> -->
				<!-- <field name="holiday_type_permission" attrs="{'invisible':['&amp;',('color_name_holiday_status','not in','lightblue'),('type','not in','add')], 'required': [('color_name_holiday_status', '=', 'lightblue')]}" /> -->
			</xpath>
			
			<field name="holiday_type" position="after">
				<field name="psi_category_id" attrs="{'invisible': [('holiday_type','not in','category')]}" />
			</field>

			<xpath expr="//button[@name='action_refuse']" position='replace'>
				<button string="Refuser" name="action_refuse" states="confirm,validate,validate1,validate2" type="object" 
				groups="hr_holidays_psi.group_hr_holidays_rh,hr_holidays_psi.group_hr_holidays_spa,hr_holidays_psi.group_hr_holidays_crh,hr_holidays_psi.group_hr_holidays_drha"/>
			</xpath>
			<xpath expr="//button[@name='action_validate']" position='replace'>
				<button string="Valider (DRHA)" name="action_validate" states="validate2" type="object" groups="hr_holidays_psi.group_hr_holidays_drha" class="oe_highlight"/>
			</xpath>
			<xpath expr="//button[@name='action_approve']" position='after'>
				<button string="Approbation (Chef de departement)" name="action_approbation_departement" attrs="{'invisible': [('state','not in','approbation')]}" groups="hr_holidays_psi.group_hr_holidays_rh,hr_holidays_psi.group_hr_holidays_spa" states="approbation" type="object" class="oe_highlight" />
			</xpath>
			<xpath expr="//button[@name='action_approve']" position='replace'>
				<button string="Valider (SupÃ©rieur hiÃ©rarchique)" name="action_approve" states="confirm" type="object" class="oe_highlight" />
			</xpath>
			<field name="state" position="before">
			    <button string="Valider (Responsable RH)" name="action_approve_candidate1" attrs="{'invisible': [('state','not in','validate1')]}" states="validate1" type="object" groups="hr_holidays_psi.group_hr_holidays_rh,hr_holidays_psi.group_hr_holidays_spa" class="oe_highlight"/>
			</field>
			
			<field name="state" position="replace">
				<field name="state" widget="statusbar" statusbar_visible="confirm, validate1, approbation,validate2, validate"/>
      </field>

		</field>
	</record>
	
	<!-- Resume and Letters -->
	<record id="ir_attachment_view_search_inherit_hr_holidays"
		model="ir.ui.view">
		<field name="name">ir.attachment.search.inherit.contract</field>
		<field name="model">ir.attachment</field>
		<field name="mode">primary</field>
		<field name="inherit_id" ref="base.view_attachment_search" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='create_date']" position="after">
				<field name="index_content" string="Content" />
			</xpath>
			<xpath expr="//filter[@name='my_documents_filter']" position="attributes">
				<attribute name='invisible'>1</attribute>
			</xpath>
			<xpath expr="//filter[@name='url_filter']" position="attributes">
				<attribute name='invisible'>1</attribute>
			</xpath>
			<xpath expr="//filter[@name='binary_filter']" position="attributes">
				<attribute name='invisible'>1</attribute>
			</xpath>
		</field>
	</record>
	</data>
</odoo>
