<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
    <record id="hr_employee_psi.custom_template_rappel_collab_1" model="mail.template">
			<field name="name">Template email employee - Rappel Email au collaborateur</field>
			<field name="model_id" ref="hr_employee_psi.model_hr_employee" />
			<field name="email_from">${object.user_id.email}</field>
			<field name="subject">Premier rappel de ${object.name_related or 'n/a' }</field>
			<!--  <field name="email_to"> ${object.user_id.email} </field> -->
			<field name="email_to">${object.work_email}</field>
			 <field name="email_cc">${object.coach_id.email}</field>
			<!--  <field name="reply_to"> preferred Reply address</field> -->		
			<field name="body_html"><![CDATA[
<div>
    <p>
      	Bonjour ${object.name}, 
     	Premier rappel Email au collaborateur pour suivre le cours d’éthique                    
	</p>               
</div>   ]]>
			</field>
		</record>

	<!-- Second rappel au collaborateur -->
