<?xml version="1.0" encoding='UTF-8'?>
<odoo noupdate="1">
    <record model="ir.cron" id="relance_normal_cron">
        <field name="name">Relance bvf normal toutes les semaines</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model" eval="'relancer.bvf'"/>
        <field name="function" eval="'_cron_bvf_normal'"/>
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 07:00:00')"/>
    </record>
    
